/* -------------------------------------------- */
/* ------------ projects - sidebar ------------ */
/* -------------------------------------------- */
.projects
	padding 0
	margin 0
	list-style none

.projects ul
	// deployed folder
	padding-left 10px

.projects li
	width 100%
	white-space nowrap
	text-overflow ellipsis
	overflow hidden
	margin-bottom 5px
	margin-top 5px

.projects li a
	cursor pointer
	&:hover
		text-decoration underline

/* --------------------------------- */
/* ------------ Spoiler ------------ */
/* --------------------------------- */

.spoiler-button
	size 12px
	vertical-align middle
	display inline-block
	border 2px solid #ccc
	border-left-color transparent
	border-bottom-color transparent
	transform rotate(45deg)
	margin-right 10px
	transition all .2s
	&[deployed=on]
		transform rotate(45deg + 90)
		margin-left 3px
		margin-right 7px
	&:hover
		border-top-color #333
		border-right-color @border-top-color

.spoiler-replace
	@extends .spoiler-button
	border-color transparent
	&:hover
		border-color transparent



/* ------------------------------------------------- */
/* ------------ items in the main panel ------------ */
/* ------------------------------------------------- */

.items
	padding 0
	list-style none
	margin 0
	position absolute
	left 10px
	right 0
	overflow auto
	top nav-bar-height + 5
	bottom 0
	&[showing="on"]
		left 50px
		right -50px
		opacity 0

.item
	padding 2px
	cursor default
	&:hover, &[focused=on]
		background-color #e5ebf7
	
	&.item-hide
		height 25px
		opacity .7
		transition all .5s
	
.items.hiding-files
	.item-hide
		height 0
		margin 0
		overflow hidden
		opacity 0
	
.item img
	width 20px
	vertical-align middle


/* ------------------------------- */
/* ------------ Empty ------------ */
/* ------------------------------- */

.cd-empty 
	font-size 75px
	text-align center
	font-weight bold
	color #ccc
	font-family "Verdana"
	