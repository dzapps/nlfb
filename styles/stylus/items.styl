/* -------------------------------------------- */
/* ------------ projects - sidebar ------------ */
/* -------------------------------------------- */
.projects
	padding 0
	margin 0
	list-style none
	position absolute
	bottom 0
	top 40px
	left 10px
	right 0
	overflow auto
	overflow-x auto

.projects ul
	// deployed folder
	padding-left 10px

.projects li
	width 100%
	white-space nowrap
	text-overflow none
	margin-bottom 5px
	margin-top 5px

.projects li a
	cursor pointer
	&:hover
		text-decoration underline

/* --------------------------------- */
/* ------------ Spoiler ------------ */
/* --------------------------------- */

.spoiler-button
	size 12px
	vertical-align middle
	display inline-block
	border 2px solid #ccc
	border-left-color transparent
	border-bottom-color transparent
	transform rotate(45deg)
	margin-right 10px
	transition all .2s
	&[deployed=on]
		transform rotate(45deg + 90)
		margin-left 3px
		margin-right 7px
	&:hover
		border-top-color #333
		border-right-color @border-top-color

.spoiler-replace
	@extends .spoiler-button
	border-color transparent
	&:hover
		border-color transparent



/* ------------------------------------------------- */
/* ------------ items in the main panel ------------ */
/* ------------------------------------------------- */

.items
	padding 0
	list-style none
	margin 0
	position absolute
	left 10px
	right 0
	overflow auto
	top nav-bar-height + 5
	bottom 0
	&[showing="on"]
		left 50px
		right -50px
		opacity 0

	&[view-mode=list] .item
		display block
		padding 2px
		cursor default
		height 25px
		opacity 1
		&:hover, &[focused=on]
			background-color #e5ebf7
		
		&.item-hide
			opacity .7
			transition-property opacity, height
			transition-duration .3s
	
		img
			max-width 20px
			max-height 20px
			vertical-align middle
	
	&[view-mode=icon] .item
		word-wrap break-word
		display inline-block
		width 75px
		margin 5px
		vertical-align top
		text-overflow ellipsis
		text-align center
		cursor default
		img
			width 50px
			height 50px
			display block
			margin 0 auto
		&:hover
			background-color #e5ebf7
			

	&[hiding-files=on]
		.item-hide
			height 0
			width 0
			margin 0
			overflow hidden
			opacity 0
	
/* ------------------------------- */
/* ------------ Empty ------------ */
/* ------------------------------- */

.cd-empty 
	font-size 75px
	text-align center
	font-weight bold
	color #ccc
	font-family "Verdana"
	