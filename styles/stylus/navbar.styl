/* ------------ navbar ------------ */
/* -------------------------------- */

nav-bar-height = 57px

.navbar 
	border-bottom 1px solid #aaa
	height nav-bar-height
	position relative

.navbar-btn-wrapper 
	vertical-align middle
	margin 13px 5px
	display inline-block
	width 35px
	height 35px
	position relative

.navbar-btn 
	cursor pointer
	width 25px
	height 25px
	position absolute
	top 50%
	left 50%
	margin-left -12.5px
	margin-top -12.5px
	/* transition all .1s */


.navbar-btn path 
	fill #999

.navbar-btn:hover path 
	fill #333


.navbar-btn-wrapper:first-of-type 
	transform rotate(90deg)


.breadcrumb 
	vertical-align middle
	display inline-block
	margin-left 7px
	padding 0
	list-style none
	position absolute
	left 100px
	margin-top 0
	line-height nav-bar-height


.breadcrumb li 
	display inline-block

.breadcrumb li:not(:last-of-type)::after 
	content "/"
	color #aaa
	display inline-block
	margin-left 10px
	margin-right 5px


.breadcrumb a 
	color #86a1ea
	text-decoration none


.breadcrumb a:hover 
	color #1c42a7
