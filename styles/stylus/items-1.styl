/* ------------ items ------------ */
/* ------------------------------- */

.items, .projects
	padding 0
	padding-top 5px
	margin 0
	font-family "Trebuchet MS", "Inconsolata"
	list-style none
	position absolute
	bottom 0
	top 57px
	left 0
	right 0
	overflow auto
	padding-left 10px
	width 100%

.projects
	top 50px
	left 0
	bottom 57px
	width 100%
	height auto
	padding-left 5px

.projects ul
	width 100%
	margin 0
	padding-left 20px

.items[showing=on]
	left 50px
	right -50px
	opacity 0

.item
	width 100%
	padding-left 5px

.item img
	height 15px
	width 15px
	display inline-block
	vertical-align middle

.projects li
	margin 5px 0
	padding-top 3px
	padding-bottom 3px
	padding-left 0
	/* position relative */
	width 100%
	height 30px
	text-overflow ellipsis
	white-space no-wrap
	background-color lighten(red, 90%) /* debug */

.items li a,
.projects li a
	height 100%
	display inline-block
	color #333
	text-decoration none
	padding-left 10px
	padding-top 2px
	padding-bottom 2px
	cursor default
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	-o-user-select none
	user-select none
	

.projects li a
	margin-left 5px
	padding-left 0
	// right 0
	left 20px
	cursor pointer

.projects li:hover
	text-decoration underline

.items li[focused=on]
	background-color #eef2fa

.items li:hover
	background-color #e5ebf7


.spoiler-button,
.spoiler-replace
	display inline-block
	border 5px solid #aaa
	border-left-color transparent
	border-top-color transparent
	transform rotate(-45deg)
	width 15px
	height 15px
	/* padding 5px */
	margin-right 5px
	vertical-align middle
	transition all .2s

.spoiler-replace
	border-color transparent

.spoiler-button:hover
	border-bottom-color #333
	border-right-color #333


.spoiler-button[deployed=on]
	transform rotate(45deg)
	margin-left 5px
	margin-right 0px
	margin-top -7px
	transition all .2s

