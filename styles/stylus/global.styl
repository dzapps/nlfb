*
	box-sizing border-box
.atomic-center 
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

.mute
	color #888

.text-center
	text-align center

code
	background-color #ededed
	border-radius 3px
	height 26px
	line-height 26px
	padding 0 3px

pre code
	background none
	color white

pre
	padding 10px
	background-color #393a3d
	margin 15px 0

button, .btn
	margin 0 5px
	text-decoration none
	color #333
	background-color transparent
	border 1px solid #aaa
	padding 10px
	font-size 80%
	border-radius 5px
	font-family "Open Sans"
	cursor pointer
	img, svg
		vertical-align middle
		margin-top -5px
		path
			fill currentColor
		
	&:hover
		background-color #0001

	&.reverse
		border-color white
		color white
		&:hover
			background-color #fff3
	
	&.big
		padding 20px
		font-size 120%
	
a
	color #666
	&:hover
		color inherit
	
	cursor pointer
	text-decoration underline

.text-center
	text-align center

kbd
	border 1px solid #aaa
	min-width 20px
	display inline-block
	text-align center
	background-color white
	padding 0 3px
	text-transform uppercase

.hint
	padding 10px 
	background-color lighten(#B7D8F9, 40%)
	border-left 8px solid #6b84fb
	&::before
		content: ""
		display inline-block
		width 40px
		height @width
		line-height @width - 3
		font-size 20px
		color @background-color
		font-weight bold
		background-image url(../img/idea-2.svg)
		background-size 100% 100%
		background-position center center
		background-repeat no-repeat
		text-align center
		vertical-align middle
		margin-right 5px
		margin-bottom 10px

.protip
	@extend .hint
	background-color lighten(#DF994D, 50%)
	border-left 8px solid darken(#DF994D, 10%)
	&::before
		background-image url(../img/protip.svg)
	

h2
	border-bottom 1px solid #ccc
	padding-bottom 5px