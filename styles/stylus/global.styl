.atomic-center 
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

.mute
	color #888

code
	background-color #ededed
	border-radius 3px
	padding 2px 5px

button
	background-color transparent
	border 1px solid black
	padding 10px
	font-size 100%
	border-radius 5px
	font-family "Open Sans"
	cursor pointer
	
	&:hover
		background-color #fff3
		
	&.reverse
		border-color white
		color white
	
		