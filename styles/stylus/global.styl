*
	box-sizing border-box
.atomic-center 
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

.mute
	color #888

code
	background-color #ededed
	border-radius 3px
	height 26px
	line-height 26px
	padding 0 3px

pre code
	background-color none
	

pre
	background-color #ededed

button, .btn
	margin 0 5px
	text-decoration none
	color #333
	background-color transparent
	border 1px solid #aaa
	padding 10px
	font-size 80%
	border-radius 5px
	font-family "Open Sans"
	cursor pointer
	img, svg
		vertical-align middle
		margin-top -5px
		path
			fill currentColor
		
	&:hover
		background-color #0001

	&.reverse
		border-color white
		color white
		&:hover
			background-color #fff3
	
	&.big
		padding 20px
		font-size 120%
	
a
	color #666
	&:hover
		color inherit
	
	cursor pointer
	text-decoration underline

.text-center
	text-align center

kbd
	border 1px solid #aaa
	min-width 20px
	display inline-block
	text-align center
	background-color white
	padding 0 3px