@import 'tools'

::-webkit-scrollbar 
	box-sizing content-box
	width 6px

::-webkit-scrollbar-track 
	padding-top 5px
	padding-bottom 5px

::-webkit-scrollbar-thumb 
	background gray
	border-radius 50px
	border 1px solid white


::-webkit-scrollbar-thumb:active 
	border-color transparent


::-webkit-scrollbar-button 
	height 5px


::-webkit-scrollbar:horizontal 
	height 7px
	border-bottom 2px solid transparent

::selection {
	background-color alpha(gray, 50%)
}

html
	height 100%
	width 100%
	margin 0

body 
	margin 0
	padding 0
	background-color white
	font-family "Trebuchet MS"
	font-size 16px
	height 100%

.wrapper 
	width 100%
	height 100%
	position relative

* 
	box-sizing border-box
	outline none


.atomic-center 
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)


.main 
	width 100%
	z-index 50
	position absolute
	bottom 0
	top 57px

.sidebar
	display inline-block
	width 20%
	margin 0
	margin-top -1px
	background-color #eee
	vertical-align top
	overflow hidden
	position relative
	height 100%

.sidebar h3
	margin 0
	margin-top 10px
	text-align center

.sep
	width 2px
	border 2px solid transparent
	position absolute
	left 20%
	top 0
	bottom 0
	background-color transparent
	cursor col-resize
	z-index 500


article
	margin 0
	display inline-block
	width 80%
	position absolute
	top 0
	bottom 0
	overflow hidden
	padding-left 10px
	
code
	border 1px solid #aaa
	padding 1px 5px
	
pre
	margin 0
	height 100%
	position relative

pre code
	border none
	padding 5px
	padding 0

pre div.language
	position fixed
	right 7px
	bottom 7px
	color: #ddd
	font-family "Monaco"
	font-size 15px
	line-height 15px
	background-color #0008
	padding 5px 5px
	border-radius 2px 0 0 2px


@import 'navbar'
@import 'header'
@import 'items'
@import 'context-menu'
@import 'modals'

@import 'color-schemes/atom-one-light.styl'
